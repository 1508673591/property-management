/* pages/in/index.wxss */
.container{
  padding-top: 110rpx;
}

.add{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
}

.user-info {
  margin-bottom: 20rpx;
  align-items: center;
}

.user-info .info{
  margin-left: 10rpx;
}

.user-info .nick-name {
  font-size: 32rpx;
}

.create-time {
  font-size: 28rpx;
  color: #999;
}

.user-info image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.news {
  background: #fff;
}

.news-container {
  padding: 5rpx;
}

.news-title {
  font-size: 34rpx;
  margin-bottom: 15rpx;
}

.news-summary {
  font-size: 24rpx;
  color: #999;
}

.news-liked {
  font-size: 24rpx;
  text-align: right;
  color: #999;
}

.news-box {
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #ddd;
}

.topic-pic{
  width: 100%;
  height: 220rpx;
}

.weui-navbar__slider {
  width: 57.6px;
}

.weui-tab .weui-navbar{
  background: #fff;
}

.weui-navbar__slider {
  background-color: #34c0ee;
}

.weui-navbar__item.weui-bar__item_on {
  color: #34c0ee;
}
